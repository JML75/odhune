{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Gestion {% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/presentation_afficher.css') }}">
{% endblock %}
{% block content %}

<div class="wrapper">
 

      <a class="btn btn-dark mx-auto"  href="{{ path("presentation_ajouter") }}">Ajouter une presentation</a>

    {% if presentations %}

    <table class="table  table-hover table-striped text-center">
        <thead class="bg-dark text-white">
            <tr>       
                <th>titre</th>
                <th>sous-titre</th>
                <th>Photo</th>
                <th>presentation</th>
                <th>active</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            
            </tr>    
        </thead>

        <tbody>            
            {% for presentation in presentations %}
                
                <tr class="align-middle">
                    <td class="align-middle">{{ presentation.titre }}</td>
                    <td class="align-middle">{{ presentation.sstitre }}</td>
                    <td>
                        <img src="{{ asset("img/photoLifeUpload/" ~  presentation.getPhotoLives.first() ) }}" alt="image du produit" style="width:80px"> 
                    </td>
                    <td class="align-middle">{{ presentation.presentation }}</td>
                    {% if presentation.active == 1 %}
                        <td>
                        <a href=" {{path('presentation_active' , {'id': presentation.id} ) }}"> 
                            <img src="{{ asset('img/icones/button-green.png') }}" alt="icone positif"  style="width:24px"alt="image du produit" > 
                            </a>
                        </td>
                        
                    {% else %}
                        <td>
                        <a href=" {{path('presentation_active' , {'id': presentation.id} ) }}"> 
                            <img src="{{ asset('img/icones/button-red.png') }}" alt="icone negatif"  style="width:24px"alt="image du produit" > 
                            </a>
                        </td>
                        
                    {% endif %}
                    <td class="align-middle">
                        <a href="{{ path('presentation_modifier', {'id' : presentation.id } ) }}">
                            <img src="{{ asset('img/icones/update.png') }}" alt="icone editer"  style="width:36px">
                        </a>
                    </td>

                    <td class="align-middle">
                        <a href="{{ path('presentation_supprimer', {'id' : presentation.id } ) }}" onclick="return confirm('Confirmez-vous la suppression de cette presentation ?')">
                            <img src="{{ asset('img/icones/delete.png') }}" alt="icone effacer" style="width:24px">
                    </td>  
                </tr>
            {% endfor %}          
        </tbody>              
    </table>


    {% else %}
            
            <h4 class="text-center text-danger mt-3 fst-italic">Il n'y a aucune presentation pour le moment</h4>

        {% endif %}
        

</div>
{% endblock %}
{% block javascripts %}
{% endblock %}
