{% extends 'base.html.twig' %}

{% block title %}Reinitialiser votre mot de passe{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/reset_password.css') }}">{% endblock %}

{% block h1 %}Reinitialiser votre mot de passe{% endblock %}

{% block content %}
        <div class=" wrapper col-12 d-flex flex-lg-row flex-column ">
            <div class="col-lg-7 col-12">

				<img id="slideShow" class="d-block w-100" src="{{ asset('img/background/Jeanne-Paul.jpg') }}" alt="photo_odhune">

			</div>



            <div class="col-lg-3 col-6 my-2 mx-auto d-flex flex-column justify-content-center">

                {{ form_start(resetForm) }}



                    {{ form_label(resetForm.plainPassword.first) }}
                    <div class="mb-3">
                        <div class='col-12 input-group '>
                        {{ form_widget(resetForm.plainPassword.first, {'attr' : {"data-toggle" : "password"}}) }}
                            <span class="input-group-text bg-white"><i class="fa fa-eye"></i></span>
                        </div>
                        {{ form_errors(resetForm.plainPassword.first) }}
                    </div>  
                       <div class="mb-2">
                            {{ form_label(resetForm.plainPassword.second) }}
                        <div class='col-12 input-group'>
                            {{ form_widget(resetForm.plainPassword.second, {'attr' : {"data-toggle" : "password"}}) }}
                                <span class="input-group-text bg-white"><i class="fa fa-eye"></i></span>
                            </div>
                            {{ form_errors(resetForm.plainPassword.second) }}
                        </div>


                    <button class="btn mt-3 col-12">Reinitialiser votre mot de passe</button>
                 {{ form_end(resetForm) }}
            </div>
    </div>


{% endblock %}

 {% block javascripts %}

<script  src="{{ asset("js/bootstrap-show-password.min.js") }}"></script>

{% endblock %}
